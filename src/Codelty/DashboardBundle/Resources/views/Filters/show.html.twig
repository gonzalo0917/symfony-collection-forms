{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Filters</h1>

    <table class="table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Filter</th>
                <td>{{ entity.filter }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('filters') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('filters_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
