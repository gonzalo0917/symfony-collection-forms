{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Dashboard list</h1>

    <table class="table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pagetitle</th>
                <th>Gametitle</th>
                <th>Platform</th>
                <th>Registerdate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('dashboard_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.pageTitle }}</td>
                <td>{{ entity.gameTitle }}</td>
                <td>{{ entity.platform }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('dashboard_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('dashboard_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('dashboard_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
