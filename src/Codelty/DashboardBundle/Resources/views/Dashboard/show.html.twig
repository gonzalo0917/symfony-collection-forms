{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Dashboard</h1>

    <table class="table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Pagetitle</th>
                <td>{{ entity.pageTitle }}</td>
            </tr>
            <tr>
                <th>Gametitle</th>
                <td>{{ entity.gameTitle }}</td>
            </tr>
            <tr>
                <th>Platform</th>
                <td>{{ entity.platform }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('dashboard') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('dashboard_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
